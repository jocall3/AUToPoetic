{
  "name": "devcore-monorepo-root",
  "private": true,
  "version": "1.0.0",
  "description": "Monorepo for the federated micro-frontend and microservice architecture.",
  "type": "module",
  "workspaces": [
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "start:shell": "pnpm --filter shell dev",
    "build": "pnpm --stream -r build",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md,css}\"",
    "docs:generate": "typedoc",
    "typecheck": "tsc --noEmit -p ./tsconfig.json"
  },
  "dependencies": {
    "@apollo/client": "^3.9.11",
    "axe-core": "^4.9.1",
    "comlink": "^4.4.1",
    "diff": "^5.2.0",
    "firebase": "^10.12.2",
    "graphql": "^16.8.1",
    "idb": "^8.0.0",
    "inversify": "^6.0.2",
    "jszip": "^3.10.1",
    "jwt-decode": "^4.0.0",
    "marked": "^13.0.1",
    "mermaid": "^10.9.1",
    "react": "18.2.0",
    "react-colorful": "^5.6.1",
    "react-dom": "18.2.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@babel/preset-env": "^7.24.7",
    "@babel/preset-react": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@tailwindcss/typography": "^0.5.13",
    "@types/diff": "^5.2.1",
    "@types/jszip": "^3.4.1",
    "@types/marked": "^6.0.0",
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "autoprefixer": "^10.4.19",
    "babel-loader": "^9.1.3",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jsdoc": "^48.2.6",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "html-webpack-plugin": "^5.6.0",
    "postcss": "^8.4.38",
    "postcss-loader": "^8.1.1",
    "prettier": "^3.3.2",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.4",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "webpack": "^5.92.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.4"
  }
}