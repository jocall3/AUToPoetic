{
  "name": "@devcore/orchestration",
  "version": "1.0.0",
  "private": true,
  "description": "Resource Orchestrator for the DevCore AI Toolkit, handling predictive pre-fetching of micro-frontends and data.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
  "build": "tsc --declaration --outDir dist && vite build --config vite.lib.config.ts",
  "dev": "vite build --watch --config vite.lib.config.ts",
  "lint": "tsc --noEmit",
  "docs": "typedoc",
  "clean": "rm -rf dist"
  },
  "dependencies": {
    "@devcore/worker-pool": "workspace:*",
    "comlink": "^4.4.1",
    "inversify": "^6.0.2",
    "reflect-metadata": "^0.2.2"
  },
  "peerDependencies": {
    "react": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "eslint": "^8.57.0",
    "tsup": "^8.1.0",
    "typedoc": "^0.25.13",
    "typescript": "5.4.5"
  },
  "license": "MIT"
}
