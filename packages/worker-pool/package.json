{
  "name": "@dev-core/worker-pool",
  "version": "1.0.0",
  "private": true,
  "description": "Manages a dedicated pool of Web Workers for offloading intensive client-side computations, handling task queuing, worker lifecycle, and standardized communication.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint . --ext .ts,.tsx --report-unused-disable-directives --max-warnings 0",
    "clean": "rm -rf dist .turbo"
  },
  "devDependencies": {
    "@types/node": "^20.14.9",
    "@types/web": "^0.0.155",
    "eslint": "^8.57.0",
    "eslint-config-custom": "workspace:*",
    "tsconfig": "workspace:*",
    "tsup": "^8.0.2",
    "typescript": "^5.5.2"
  },
  "dependencies": {
    "comlink": "^4.4.1"
  }
}
