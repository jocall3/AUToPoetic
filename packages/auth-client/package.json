{
  "name": "@devcore/auth-client",
  "version": "1.0.0",
  "private": false,
  "description": "Client-side library for interacting with the AuthGateway microservice. Handles OIDC flows and JWT management for federated micro-frontends.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rm -rf dist docs",
    "lint": "eslint . --ext .ts",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "build": "vite build",
    "docs": "typedoc --out docs src/index.ts",
    "prepublishOnly": "npm run test && npm run build"
  },
  "dependencies": {
    "jwt-decode": "^4.0.0",
    "oidc-client-ts": "^3.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "eslint": "^8.57.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "vite": "^5.2.11",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Elite AI Implementation Team <contact@devcore.ai>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jburvel/devcore-ai-toolkit.git",
    "directory": "packages/auth-client"
  },
  "keywords": [
    "auth",
    "client",
    "oidc",
    "jwt",
    "micro-frontend",
    "devcore"
  ]
}
