{
  "name": "@devcore/auth-client",
  "version": "1.0.0",
  "private": false,
  "description": "Client-side library for OIDC flows and JWT management with the AuthGateway.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "pnpm build --watch",
    "clean": "rm -rf dist .turbo",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "^20.14.9",
    "eslint": "^8.57.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Elite AI Implementation Team <contact@devcore.ai>",
  "license": "UNLICENSED",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jocall3/autopoetic.git",
    "directory": "packages/auth-client"
  },
  "keywords": [
    "auth",
    "client",
    "oidc",
    "jwt",
    "micro-frontend",
    "devcore"
  ]
}
