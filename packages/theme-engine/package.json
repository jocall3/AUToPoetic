{
  "name": "@devcore/theme-engine",
  "version": "0.1.0",
  "private": true,
  "description": "A proprietary engine for consuming, validating, and applying dynamic, runtime-swappable themes from a structured JSON schema.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
 "scripts": {
  "build": "tsc --declaration --outDir dist && vite build --config vite.lib.config.ts",
  "dev": "vite build --watch --config vite.lib.config.ts",
  "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
  "test": "vitest run",
  "clean": "rm -rf dist"
},
  "peerDependencies": {
    "react": "18.2.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^2.0.2"
  },
  "files": [
    "dist"
  ],
  "license": "UNLICENSED",
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
