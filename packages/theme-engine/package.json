{
  "name": "@devcore/theme-engine",
  "version": "0.1.0",
  "private": false,
  "description": "A proprietary engine for consuming, validating, and applying dynamic, runtime-swappable themes from a structured JSON schema.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
 "scripts": {
  "build": "tsc --declaration --outDir dist && vite build --config vite.lib.config.ts",
  "dev": "vite build --watch --config vite.lib.config.ts",
  "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
  "test": "vitest run",
  "clean": "rm -rf dist"
},
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "@types/react": "^18.3.3",
    "eslint": "^8.57.0",
    "tsup": "^8.1.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "author": "Elite AI Implementation Team <contact@devcore.ai>",
  "license": "UNLICENSED",
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  }
}
