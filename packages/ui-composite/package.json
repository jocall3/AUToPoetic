  "description": "A library of composite, stateful UI patterns like the Windowing System and Dock Manager for the Jester UI Framework.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "author": "Jester AI Implementation Team",
  "keywords": [
    "jester",
    "ui",
    "composite",
    "react",
    "components",
    "windowing-system"
