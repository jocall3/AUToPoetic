    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@devcore/core-ui": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "tsup": "^8.1.0",
